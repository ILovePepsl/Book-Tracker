<!DOCTYPE html>
<html>
<head>
  <title>BookTracker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <style>
      .container {
          display: flex;
      }
      .sidebar {
          width: 200px;
          padding: 15px;
          background-color: #2c2c2c;
      }
      .main-content {
          flex-grow: 1;
          padding: 15px;
      }
      .sidebar a {
          display: block;
          padding: 10px;
          text-decoration: none;
          color: #007bff;
      }
      .sidebar a:hover {
          background-color: #e9ecef;
      }
  </style>
</head>

<body>
<div class="container">
  <div class="sidebar">
    <%= render 'shared/sidebar' %>
  </div>
  <div class="main-content">


    <%= yield %>
  </div>
</div>
</body>
</html>
