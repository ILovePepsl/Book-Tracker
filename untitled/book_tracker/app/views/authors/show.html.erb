<h1><%= @author.name %></h1>
<p><%= @author.bio %></p>

<h2>Books by this author in My Library:</h2>
<ul>
  <% @user_library_books.each do |book| %>
    <li>
      <%= link_to book.title, book_path(book) %>
      <%= image_tag book.cover_image.attached? ? url_for(book.cover_image) : 'default_cover.png', size: "50x50" %>
    </li>
  <% end %>
</ul>

<h2>Books by this author in General Library:</h2>
<ul>
  <% @general_library_books.each do |book| %>
    <li>
      <%= link_to book.title, general_library_path(book) %>
      <%= image_tag book.cover_image.attached? ? url_for(book.cover_image) : 'default_cover.png', size: "50x50" %>
    </li>
  <% end %>
</ul>


