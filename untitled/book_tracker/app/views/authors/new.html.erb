<h1>New Author</h1>
<%= form_for @author do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Author' %>
  </div>
<% end %>
<%= link_to 'Back to New Book', new_book_path %>
